---
import LayoutDefault from "~/layouts/LayoutDefault.astro";

import { Image } from "astro:assets";
import profileImg from "../assets/images/profile.jpg";

import Projects from "~/components/Projects.astro";
import CTF from "~/components/CTF.astro";
import Skills from "~/components/Skills.astro";
import Badges from "~/components/Badges.astro";
---

<LayoutDefault>
    <CTF />
    <Skills />
    <Projects />
    <Badges />
    <section class="mt-21">
        <div class="flex flex-col md:flex-row">
            <div class="flex-shrink-0 mb-4 md:mb-0">
                <Image
                    src={profileImg}
                    alt="Imagen"
                    class="w-full md:w-[450px] h-auto object-cover"
                />
            </div>
            <div class="md:ml-6">
                <p class="text-[18px] font-normal leading-6">
                    Hello! I'm Tobias, a 19-year-old cybersecurity enthusiast
                    from Buenos Aires.
                    <br /><br />
                    I've always been passionate about technology, which led me to
                    pursue a Technical Degree in Computer Networks at Universidad
                    Nacional del Oeste (UNO).
                    <br /><br />
                    Over the past four years, Iâ€™ve worked on various web development
                    projects as a freelancer, and recently, I discovered a strong
                    interest in cybersecurity, particularly penetration testing.
                    <br /><br />
                    I'm excited to continue learning and growing in this field, while
                    contributing to the cybersecurity community.
                </p>
            </div>
        </div>
    </section>
</LayoutDefault>
