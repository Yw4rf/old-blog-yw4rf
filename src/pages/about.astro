---
import LayoutDefault from "~/layouts/LayoutDefault.astro";

import { Image } from "astro:assets";
import aboutImg from "../assets/images/ghost-in-the-shell-2.gif";

import CTF from "~/components/CTF.astro";
import Skills from "~/components/Skills.astro";
import Badges from "~/components/Badges.astro"
---

<LayoutDefault>
    <section class="">
            <div class="">
                <Image
                    src={aboutImg}
                    alt="Imagen"
                    class="w-full h-auto rounded-lg opacity-[.5] object-cover"
                />
            </div>
            <div class="mt-6 inText">
                <p class="text-[19px] font-normal leading-6 mb-4">
                    I’m Tobias, a 19yo cybersecurity enthusiast based at Argentina. I’ve always been passionate about technology, which led me to pursue a Technical Degree in Computer Networks at UNO University.
  I’m excited to continue learning and growing in this field, while contributing to the cybersecurity community. I’m currently working towards ISC2 CC and CISCO EH certifications.
                </p>
                <div class="flex gap-x-2 flex-wrap">
                    <p class="opacity-60">Contact me on:</p>
                    <a href="https://t.me/yw4rf" target="_blank">Telegram</a>
                    <a href="https://linkedin.com/in/yw4rf" target="_blank">Linkedin</a>
                    <a href="mailto:tobifgabriel@gmail.com" target="_blank">Email</a>
                </div>
            </div>      
    </section>
    <section class="mr-0 sm:mr-[20px]">
    <Skills />
</section>
<section>
    <CTF />
</section>
<section>
<Badges />
</section>
</LayoutDefault>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Pixelify+Sans:wght@400..700&display=swap');
  
    .inText {
      font-family: "Pixelify Sans", serif;  
    }
  </style>