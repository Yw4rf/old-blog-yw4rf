---
import LayoutDefault from '~/layouts/LayoutDefault.astro'
import Post from '~/components/Post.astro'
import { getPosts, getPostDescription } from '~/utils'
import Pagination from '~/components/Pagination.astro'

const posts = (await getPosts()).slice(0, 5)

const { translate: t } = Astro.locals

---

<LayoutDefault>
  <body>
<div class="mb-[30px] inText">
    <p class="text-[22px] mb-4 leading-6 font-normal">Cybersecurity Enthusiast with Hands-on Penetration Testing Experience | CTF Player | Computer Networks Student</p>
    <div class="text-[#fff] mt-2">
      <a class="text-[12px] sm:text-[17px]" href="mailto:tobifgabriel@gmail.com">echo 'dG9iaWZnYWJyaWVsQGdtYWlsLmNvbQ==' | base64 -d
      </a>
  </div>
  <div class="mt-4 flex gap-x-2 text-[17px]">
    <p class="opacity-60">Check out:</p>
    <span class="flex items-center">
      <a href="/about" class="flex items-center text-white">
      <span class="">About</span>
      </a>
  </span>
  <span class="flex items-center">
    <a href="/works" class="flex items-center text-white">
      <span class="">Works</span>
    </a>
</span> 
  </div>  
  </div>
  <section contain-layout un-flex="~ col gap-7.5">
    {
      posts.map((post) => (
        <Post post={post}>
          <p class="line-clamp-4">{getPostDescription(post)}</p>
        </Post>
      ))
    }
    <Pagination showLeft={false} showPageCount={false} rightTitle={t('all_posts')} rightUrl={'posts/page/1'} />
  </section>
  </body>
</LayoutDefault>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Pixelify+Sans:wght@400..700&display=swap');

  .inText {
    font-family: "Pixelify Sans", serif;  
  }
</style>