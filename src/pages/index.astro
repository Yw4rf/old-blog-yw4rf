---
import LayoutDefault from '~/layouts/LayoutDefault.astro'
import Post from '~/components/Post.astro'
import { getPosts, getPostDescription } from '~/utils'
import Pagination from '~/components/Pagination.astro'

const posts = (await getPosts()).slice(0, 5)

const { translate: t } = Astro.locals

---

<LayoutDefault>
  <div class="lg:mt-0 mt-[-30px] mb-[40px] lg:max-w-2xl">
    <p class="text-[17px] font-normal leading-6">I am a Penetration Tester, Ethical Hacker, and Web Developer from Argentina with a strong passion for programming and cybersecurity. I am currently studying Cybersecurity at UNSO University and working towards obtaining the CISCO EH certification. Learn more about me on my <a href="/about">About</a> page and check out my <a href="/works">Works</a>.


    </div>
  <section contain-layout un-flex="~ col gap-7.5">
    {
      posts.map((post) => (
        <Post post={post}>
          <p class="line-clamp-4">{getPostDescription(post)}</p>
        </Post>
      ))
    }
    <Pagination showLeft={false} showPageCount={false} rightTitle={t('all_posts')} rightUrl={'posts/page/1'} />
  </section>
</LayoutDefault>
