---
import LayoutDefault from '~/layouts/LayoutDefault.astro'
import Post from '~/components/Post.astro'
import { getPosts, getPostDescription } from '~/utils'
import Pagination from '~/components/Pagination.astro'

const posts = (await getPosts()).slice(0, 5)

const { translate: t } = Astro.locals

---

<LayoutDefault>
  <div class="mb-[40px] max-w-xl">
    <p class="text-[#2E405B] text-[19px] font-bold">Tobias G. Fioroni a.k.a yw4rf, is a freelance developer with 19yo based in Argentina with a deep passion for programming, hardware and cybersecurity. He is currently pursuing a degree in Cybersecurity at UNO University in Buenos Aires and is working towards obtaining the ISC2 CC certification (Certified in Cybersecurity)</p>
    </div>
  <section contain-layout un-flex="~ col gap-7.5">
      <h2 class="text-[#2E405B] font-semibold text-[25px]">> Latest posts</h2>
    {
      posts.map((post) => (
        <Post post={post}>
          <p class="line-clamp-4">{getPostDescription(post)}</p>
        </Post>
      ))
    }
    <Pagination showLeft={false} showPageCount={false} rightTitle={t('all_posts')} rightUrl={'posts/page/1'} />
  </section>
</LayoutDefault>
